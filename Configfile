# A simple file for configuring
im config/values

# Software
setup
  use docker
    build
  end
  if !docker
    down $node $node-save
    extract $node-save -w $msiexec -l unzip -d packages/nodejs
    # get ruby
    down $ruby $ruby-save
    extract $ruby-save -w $msiexec -l unzip -d packages/ruby
    # get python
    down $python $python-save
    extract $python-save -w $msiexec -l unzip -d packages/python
    # add to path
    export PATH=$PATH:$node-save:$ruby-save:$python-save
    # npm packs
    npm -l packages/modules bower mocha grunt gulp jasmine istanbul less coffee-script
    gem bundle
    bundle
  end
